# ========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ========================================
NODE_ENV=development
APP_NAME=Protect-Sys-ERP
APP_PORT=3000

# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/protect_sys_erp?schema=public
DB_USER=postgres
DB_PASS=postgres
DB_NAME=protect_sys_erp
DB_PORT=5432

# ========================================
# CONFIGURAÇÕES DO DOCKER
# ========================================
CONTAINER_NAME=protect-sys-erp

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
SALT_ROUNDS=10
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# CONFIGURAÇÕES DO AWS LOCALSTACK
# ========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_LOCATION_ENDPOINT=http://localhost:4566
AWS_LOCATION_INDEX_NAME=protect-sys-place-index

# ========================================
# CONFIGURAÇÕES DO S3 (LOCALSTACK)
# ========================================
AWS_S3_ENDPOINT=http://localhost:4566
AWS_S3_BUCKET_PROFILE_PHOTOS=protect-sys-profile-photos
AWS_S3_BUCKET_DOCUMENTS=protect-sys-documents
AWS_S3_BUCKET_LOGS=protect-sys-logs

# ========================================
# CONFIGURAÇÕES DO SNS (LOCALSTACK)
# ========================================
AWS_SNS_ENDPOINT=http://localhost:4566
AWS_SNS_TOPIC_USER_NOTIFICATIONS=protect-sys-user-notifications
AWS_SNS_TOPIC_PAYMENT_NOTIFICATIONS=protect-sys-payment-notifications
AWS_SNS_TOPIC_SYSTEM_NOTIFICATIONS=protect-sys-system-notifications

# ========================================
# CONFIGURAÇÕES DO SECRETS MANAGER (LOCALSTACK)
# ========================================
AWS_SECRETS_MANAGER_ENDPOINT=http://localhost:4566
AWS_SECRET_EMAIL_CONFIG=protect-sys/email-config
AWS_SECRET_JWT_CONFIG=protect-sys/jwt-config
AWS_SECRET_PAYMENT_CONFIG=protect-sys/payment-config

# ========================================
# CONFIGURAÇÕES DE EMAIL
# ========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=noreply@protect-sys.com
MAIL_PASSWORD=your-email-password
MAIL_FROM=noreply@protect-sys.com
MAIL_SERVICE=gmail

# ========================================
# CONFIGURAÇÕES DO SWAGGER
# ========================================
SWAGGER_TITLE=Protect-Sys-ERP API
SWAGGER_DESCRIPTION=API do sistema ERP Protect-Sys para gestão de segurança e monitoramento

# ========================================
# CONFIGURAÇÕES DE REDIS
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# CONFIGURAÇÕES DE LOG
# ========================================
LOG_LEVEL=debug
LOG_FORMAT=json 